<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your stories</p>

{{!-- Note: Add JS snippets in Handlebars --}}
{{#if stories}}

    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            {{!-- Note: Add JS snippets in Handlebars --}}
            {{#each stories}}

                <tr>
                    <td>
                        {{!-- Note: It automatically knows that items _id and title are coming from story object --}}
                        <a href="/stories/{{_id}}">{{title}}</a>
                    </td>
                    <td>
                        {{!-- Note: How to use HBS helpers --}}
                        {{formatDate createdAt 'MMMM Do YYYY h:mm:ss a'}}
                    </td>
                    <td>
                        <span class="dash-status">{{status}}</span>
                    </td>
                    <td>
                        {{!-- Note: Edit button to edit a story --}}
                        <a href="/stories/edit/{{_id}}" class="btn btn-float">
                            <i class="fas fa-edit fa-small"></i>
                        </a>

                        {{!-- Note: Delete button markup --}}
                        <form action="/stories/{{_id}}" method="POST" id="delete-form">
                            {{!-- Note: To send a form request with Delete method --}}
                            <input type="hidden" name="_method" value="DELETE">

                            <button type="submit" class="btn red">
                                <i class="fas fa-trash fa-small"></i>
                            </button>
                        </form>
                    </td>
                </tr>
                
            {{/each}}
        </tbody>
    </table>

{{else}}

    <p>You have not created any stories</p>

{{/if}}